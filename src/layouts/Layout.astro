---
import '@styles/global.css';

interface Props {
  title: string;
}

await Astro.glob('../components/*.astro');

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title} - build</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<script>
  import '@scripts/global';
</script>
